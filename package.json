{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "Notes Application",
  "main": "js/app.js",
  "scripts": {
    "start-dev": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "dev": "npm run start-dev",
    "start": "npm run start-dev",
    "docker:build": "docker build -t notes-app .",
    "docker:run": "docker run -p 8080:80 notes-app",
    "docker:update": "node scripts/update-docker.js",
    "docker:update:compose": "docker-compose pull notes-app && docker-compose up -d notes-app",
    "docker:auto": "docker-compose --profile auto-update up -d",
    "docker:stop": "docker stop notes-app || echo Container not running",
    "docker:logs": "docker logs notes-app -f",
    "docker:clean": "docker image prune -f",
    "docker:restart": "npm run docker:stop && timeout /t 2 && npm run docker:update",
    "docker:status": "docker ps --filter name=notes-app"
  },
  "dependencies": {
    "sweetalert2": "^11.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "2.8.8",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}